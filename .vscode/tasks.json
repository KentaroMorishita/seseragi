{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Seseragi File",
      "type": "shell",
      "command": "bun",
      "args": [
        "run",
        "${workspaceFolder}/src/cli.ts",
        "run",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Compile Seseragi File",
      "type": "shell",
      "command": "bun",
      "args": [
        "run",
        "${workspaceFolder}/src/cli.ts",
        "compile",
        "${file}",
        "--output",
        "${fileDirname}/${fileBasenameNoExtension}.ts"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Watch Seseragi File",
      "type": "shell",
      "command": "bun",
      "args": [
        "run",
        "${workspaceFolder}/src/cli.ts",
        "compile",
        "${file}",
        "--output",
        "${fileDirname}/${fileBasenameNoExtension}.ts",
        "--watch"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": [],
      "isBackground": true
    }
  ]
}