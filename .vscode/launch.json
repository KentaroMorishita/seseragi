{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Seseragi File",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "run",
        "${workspaceFolder}/src/cli.ts",
        "run",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Compile Seseragi File",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "run",
        "${workspaceFolder}/src/cli.ts",
        "compile",
        "${file}",
        "--output",
        "${fileDirname}/${fileBasenameNoExtension}.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "run",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}