{
  "name": "seseragi-language-support",
  "displayName": "Seseragi Language Support",
  "description": "Syntax highlighting and language support for Seseragi functional programming language",
  "version": "0.3.6",
  "publisher": "seseragi-dev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "seseragi",
    "functional",
    "programming",
    "language"
  ],
  "contributes": {
    "languages": [
      {
        "id": "seseragi",
        "aliases": [
          "Seseragi",
          "seseragi"
        ],
        "extensions": [
          ".ssrg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "seseragi",
        "scopeName": "source.seseragi",
        "path": "./syntaxes/seseragi.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[seseragi]": {
        "editor.defaultFormatter": "seseragi-dev.seseragi-language-support",
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    },
    "configuration": {
      "type": "object",
      "title": "Seseragi configuration",
      "properties": {
        "seseragi.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "seseragi.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:seseragi"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
